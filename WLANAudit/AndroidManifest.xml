<?xml version="1.0" encoding="UTF-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.glasspixel.wlanaudit"
    android:installLocation="auto"
    android:versionCode="8"
    android:versionName="3.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" /><uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /><uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" /><uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" /><uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /><uses-permission android:name="android.permission.ACCESS_WIFI_STATE" /><uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    
    
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <permission android:name="es.glasspixel.wlanaudit.permission.MAPS_RECEIVE" android:protectionLevel="signature"></permission>
    <uses-permission android:name="es.glasspixel.wlanaudit.permission.MAPS_RECEIVE"/>
    
    
    
    <uses-feature android:glEsVersion="0x00020000" android:required="true"/>

    <application
        android:name="es.glasspixel.wlanaudit.WLANAuditApplication"
        android:hardwareAccelerated="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.Styled" >
        <activity android:name="es.glasspixel.wlanaudit.activities.NetworkListActivitySwipe" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="es.glasspixel.wlanaudit.activities.NetworkDetailsActivity" />
        <activity android:name="es.glasspixel.wlanaudit.activities.WLANAuditPreferencesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="es.glasspixel.wlanaudit.activities.NetworkListActivitySwipe" />
        </activity>
        <activity
            android:name="es.glasspixel.wlanaudit.activities.AboutActivity"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.glasspixel.wlanaudit.ABOUT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="es.glasspixel.wlanaudit.activities.NetworkListActivitySwipe" />
        </activity>
        <activity
            android:name="es.glasspixel.wlanaudit.activities.SlidingMapActivity"
            android:label="@string/title_activity_map" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="es.glasspixel.wlanaudit.activities.NetworkListActivitySwipe" />
        </activity>
        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
        <activity android:name="es.glasspixel.wlanaudit.activities.KeyListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="es.glasspixel.wlanaudit.activities.NetworkListActivitySwipe" />
        </activity>

        <receiver
            android:name="com.novoda.location.receiver.LocationChanged"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.novoda.location.ACTIVE_LOCATION_UPDATE_ACTION" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.novoda.location.receiver.PassiveLocationChanged" />
        <receiver
            android:name="com.novoda.location.receiver.UnregisterPassiveListenerOnLostConnectivity"
            android:enabled="false" >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.novoda.location.receiver.UnregisterPassiveListenerOnLowBattery" >
            <intent-filter>
                <action android:name="android.intent.action.BATTERY_LOW" />
                <action android:name="android.intent.action.BATTERY_OKAY" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.novoda.location.receiver.RestorePassiveListenerBoot" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <meta-data android:name="com.google.android.maps.v2.API_KEY" android:value="AIzaSyBxukRnvHbN9UA9y0_3gWLalHP5arg5Q5E"/>
    </application>

</manifest>