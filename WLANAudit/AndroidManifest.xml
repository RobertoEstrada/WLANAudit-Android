<?xml version="1.0" encoding="UTF-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.glasspixel.wlanaudit"
    android:installLocation="auto"
    android:versionCode="6"
    android:versionName="2.0.2" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name="es.glasspixel.wlanaudit.AcraUtils"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light.DarkActionBar" >
        <activity
            android:name="es.glasspixel.wlanaudit.NetworkListActivitySwipe"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="es.glasspixel.wlanaudit.activities.NetworkDetailsActivity" />
        <activity android:name="es.glasspixel.wlanaudit.activities.WLANAuditPreferencesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="es.glasspixel.wlanaudit.NetworkListActivitySwipe" />
        </activity>
        <activity
            android:name="es.glasspixel.wlanaudit.activities.AboutActivity"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.glasspixel.wlanaudit.ABOUT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="es.glasspixel.wlanaudit.NetworkListActivitySwipe" />
        </activity>
        <activity
            android:name="es.glasspixel.wlanaudit.activities.MapActivity"
            android:label="@string/title_activity_map" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="es.glasspixel.wlanaudit.NetworkListActivitySwipe" />
        </activity>
        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
        <activity android:name="es.glasspixel.wlanaudit.activities.KeyListActivity" />
